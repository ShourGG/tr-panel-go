# Terraria Panel Configuration

# Server Port
PORT=8800

# Environment (development/production)
ENV=development

# ========== Download Optimization Settings ==========

# Use GitHub Mirror (recommended for users in China)
# Set to "true" to enable GitHub mirror acceleration
USE_GITHUB_MIRROR=true

# GitHub Mirror URL
# Available mirrors:
# - https://ghproxy.com/ (recommended, fast and stable)
# - https://gh-proxy.com/
# - https://mirror.ghproxy.com/
GITHUB_MIRROR_URL=https://ghproxy.com/

# Download Retry Count
# Number of retries when download fails
DOWNLOAD_RETRIES=3

# Download Timeout (seconds)
# Timeout for each download attempt
DOWNLOAD_TIMEOUT=300

# Enable Multi-threaded Download (experimental)
# Set to "true" to enable multi-threaded download
# Note: This feature is experimental and may not work with all servers
ENABLE_MULTI_THREAD=false

